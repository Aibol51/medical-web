.record-list {
  padding: 20rpx;
  background-color: #f5f5f5;
  min-height: 100vh;
}
.record-list .record-card {
  background-color: #fff;
  border-radius: 12rpx;
  padding: 24rpx;
  margin-bottom: 20rpx;
  box-shadow: 0 2rpx 8rpx rgba(0, 0, 0, 0.05);
}
.record-list .record-card .record-header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-bottom: 20rpx;
  padding-bottom: 20rpx;
  border-bottom: 1rpx solid #eee;
}
.record-list .record-card .record-header .patient-info {
  display: flex;
  align-items: center;
}
.record-list .record-card .record-header .patient-info .patient-name {
  font-size: 32rpx;
  font-weight: bold;
  color: #333;
  margin-right: 20rpx;
}
.record-list .record-card .record-header .patient-info .gender-age {
  font-size: 26rpx;
  color: #666;
}
.record-list .record-card .record-header .visit-date {
  font-size: 24rpx;
  color: #999;
}
.record-list .record-card .record-content .info-item {
  margin-bottom: 16rpx;
  display: flex;
}
.record-list .record-card .record-content .info-item .label {
  font-size: 28rpx;
  color: #666;
  width: 160rpx;
  flex-shrink: 0;
}
.record-list .record-card .record-content .info-item .value {
  font-size: 28rpx;
  color: #333;
  flex: 1;
}
.record-list .record-card .record-footer {
  display: flex;
  justify-content: space-between;
  margin-top: 20rpx;
  padding-top: 20rpx;
  border-top: 1rpx solid #eee;
}
.record-list .record-card .record-footer .phone, .record-list .record-card .record-footer .visit-count {
  font-size: 24rpx;
  color: #999;
}