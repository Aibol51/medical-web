.content {
  overflow: visible;
  width: 100%;
  height: 100%;
  padding-bottom: constant(safe-area-inset-bottom);
  padding-bottom: env(safe-area-inset-bottom);
}
.content .topBar {
  position: relative;
  height: 250rpx;
  background-color: #6AE75A;
  border-radius: 0 0 40rpx 40rpx;
  overflow: visible;
}
.content .topBar .globalLanguage {
  display: flex;
  flex-direction: column;
  align-items: flex-end;
  padding: 10rpx 25rpx;
}
.content .topBar .globalLanguage .globalSvg {
  width: 45rpx;
  height: 45rpx;
}
.content .topBar .helloTag {
  display: flex;
  flex-direction: column;
  gap: 5rpx;
  padding: 0 30rpx;
  font-weight: bold;
  font-size: 35rpx;
  margin-bottom: 20rpx;
}
.content .topBar .helloTag .userName {
  font-size: 45rpx;
}
.content .topBar .helloTag .logIn {
  font-size: 35rpx;
}
.content .topBar .swiperContent {
  bottom: 0;
  width: 100%;
}
.content .topBar .swiperContent .uni-margin-wrap {
  padding: 0 20rpx;
}
.content .topBar .swiperContent .swiper {
  height: 300rpx;
}
.content .topBar .swiperContent .swiper-item {
  display: block;
  height: 300rpx;
  line-height: 300rpx;
  text-align: center;
  width: 100%;
}
.content .topBar .swiperContent .swiper-item .swiperImage {
  width: 100%;
  height: 300rpx;
  border-radius: 20rpx;
}
.content .menuContent {
  margin-top: 280rpx;
  display: flex;
  padding: 0 20rpx;
}
.content .menuContent .menuBox {
  display: flex;
  flex-direction: row;
  justify-content: space-between;
  padding: 20rpx;
  background-color: #F5F5F5;
  border-radius: 20rpx;
  width: 100%;
}
.content .menuContent .menuBox .menuList {
  display: flex;
  flex-direction: column;
  align-items: center;
  gap: 10rpx;
  font-size: 20rpx;
}
.content .menuContent .menuBox .menuList .menuImage {
  width: 60rpx;
  height: 60rpx;
}
.content .menuContent .menuBox .menuList .menuText {
  font-size: 25rpx;
}
.content .newsContent {
  margin-top: 20rpx;
}
.content .newsContent .newsTitle {
  padding: 0 20rpx;
  font-weight: bold;
}
.content .newsContent .custom-cover {
  flex: 1;
  flex-direction: row;
  position: relative;
}
.content .newsContent .cover-content {
  position: absolute;
  bottom: 0;
  left: 0;
  right: 0;
  background-color: rgba(0, 0, 0, 0.4);
  display: flex;
  flex-direction: row;
  align-items: center;
  padding-left: 20rpx;
  font-size: 28rpx;
  color: #fff;
  word-break: break-all;
  text-overflow: ellipsis;
  display: -webkit-box;
  -webkit-box-orient: vertical;
  -webkit-line-clamp: 2;
  /* 这里是超出几行省略 */
  overflow: hidden;
}
.content .newsContent .cover-image {
  flex: 1;
  height: 350rpx;
  width: 100%;
}