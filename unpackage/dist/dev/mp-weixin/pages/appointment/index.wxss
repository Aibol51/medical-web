.popupContent {
  margin: 60rpx 40rpx;
}
.detailContent {
  min-height: 60vh;
  padding: 30rpx;
  background-color: #f8f8f8;
}
.detailContent .header {
  text-align: center;
  margin-bottom: 40rpx;
}
.detailContent .header .title {
  font-size: 32rpx;
  font-weight: bold;
  color: #333;
}
.detailContent .detail-list {
  background-color: #fff;
  border-radius: 12rpx;
  padding: 20rpx;
}
.detailContent .detail-list .detail-item {
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 24rpx 0;
  border-bottom: 1px solid #f5f5f5;
}
.detailContent .detail-list .detail-item:last-child {
  border-bottom: none;
}
.detailContent .detail-list .detail-item .label {
  font-size: 28rpx;
  color: #666;
  width: 160rpx;
}
.detailContent .detail-list .detail-item .value {
  font-size: 28rpx;
  color: #333;
  flex: 1;
  text-align: right;
}
.detailContent .detail-list .detail-item .value.status-1 {
  color: #ff9900;
}
.detailContent .detail-list .detail-item .value.status-2 {
  color: #19be6b;
}
.detailContent .detail-list .detail-item .value.status-3 {
  color: #2979ff;
}
.detailContent .detail-list .detail-item .value.status-4 {
  color: #909399;
}
.bookingContent .bookingList {
  margin: 20rpx;
  padding: 30rpx 0;
  background-color: #d4ffae;
  border-radius: 20rpx;
  display: flex;
  flex-direction: column;
  gap: 20rpx;
}
.bookingContent .bookingList .bookingTop {
  display: flex;
  justify-content: space-around;
}
.bookingContent .bookingList .bookingTop .bookingDate {
  display: flex;
  gap: 10rpx;
  align-items: center;
  flex-direction: row;
}
.bookingContent .bookingList .bookingTop .bookingTime {
  display: flex;
  gap: 10rpx;
  align-items: center;
  flex-direction: row;
}
.bookingContent .bookingList uni-view.uv-steps-item__wrapper,
.bookingContent .bookingList uni-view.uv-steps-item__wrapper--row {
  background-color: #d4ffae !important;
}